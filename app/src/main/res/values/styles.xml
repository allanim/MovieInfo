<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Allan.Dracula">
    </style>

    <style name="NoActionBarTheme" parent="Allan.Dracula">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Allan.Dracula" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
    </style>
</resources>
